<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="viewInflaterClass">androidx.appcompat.app.AppCompatViewInflater</item>
    </style>

    <!--アプリ共通テーマ アクションバーなし-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Fragmentの共通テーマ-->
    <style name="FragmentTheme">
        <item name="android:clickable">true</item>
        <item name="android:background">@color/background</item>
    </style>

    <!--Toolbar-->
    <style name="BaseToolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>
</resources>
